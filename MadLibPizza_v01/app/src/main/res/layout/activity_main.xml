                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edit_text_noun2"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-condensed" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Enter an adjective"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-condensed" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:ems="10"
                    android:id="@+id/edit_text_adj03"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-condensed" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="Enter an adjective"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-condensed" />

                <Space
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:text=""
                    android:ems="10"
                    android:id="@+id/edit_text_adj04"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif-condensed" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:text="Make Story"
        android:layout_width="match_parent"
        android:id="@+id/button"
        android:onClick="makeStory"
        android:layout_height="100dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/text_view_story"
        android:fontFamily="sans-serif-condensed"
        android:textSize="14sp"
        android:text="This is a large font for testing my @android:string/VideoView_error_text_invalid_progressive_project" />

</LinearLayout>
